@model coderush.Areas.QuanLyMatHang.Models.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            <b>
                QUẢN LÝ Danh Mục
                <small>Học viện Kỹ thuật Quân sự</small>
            </b>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Tables</a></li>
            <li class="active">Data tables</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <i class="fa fa-hand-o-right"></i>
                        <h3 class="box-title">QUẢN LÝ Danh Mục&nbsp;&nbsp;</h3>
                        <i class="fa fa-angle-double-right"></i>
                        <h3 class="box-title">Chỉnh sửa thông tin Danh mỤc</h3>
                        <button type="button" class="btn btn-warning" style="float:right">
                            <a class="fa fa-th-list"></a> &nbsp;
                            @Html.ActionLink("Danh sách", "Index")
                        </button>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="box-body">

                            @Html.ValidationSummary(true, "", new { @class = "text-dangter" })
                            @Html.HiddenFor(model => model.CategoryID)

                            <div class="form-group">
                                <label for="exampleInputEmail1">Mã Danh Mục</label>
                                <input type="text" class="form-control" name="CategoryID" placeholder="Nhập mã khách hàng" value=" @Html.DisplayFor(model => model.CategoryID)">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Tên Danh Mục</label>
                                <input type="text" class="form-control" name="CategoryName" placeholder="Sủa tên khách hàng" value=" @Html.DisplayFor(model => model.CategoryName)">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Từ Khóa</label>
                                <input type="text" class="form-control" name="KeyWord" placeholder="Sửa mật khẩu" value=" @Html.DisplayFor(model => model.KeyWord)">
                            </div>
                            @*<div class="form-group">
                                <label for="exampleInputEmail1">Email</label>
                                <input type="text" class="form-control" name="CustomerEmail" placeholder="Sử email khách hàng" value=" @Html.DisplayFor(model => model.CustomerEmail)">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Điện thoại</label>
                                <input type="text" class="form-control" name="CustomerPhone" placeholder="Sử số điện thoại của khách hàng" value=" @Html.DisplayFor(model => model.CustomerPhone)">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Địa chỉ</label>
                                <input type="text" class="form-control" name="CustomerAddress" placeholder="Sửa địa chỉ khách hàng" value=" @Html.DisplayFor(model => model.CustomerAddress)">
                            </div>*@
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary"><a class="fa fa-save"></a> &nbsp;Lưu lại</button>
                        </div>

                    }


                </div>

            </div>
            <!--/.col -->

        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->



